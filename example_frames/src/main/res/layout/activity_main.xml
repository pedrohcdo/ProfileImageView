<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.material.framesexample.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <org.material.profileimv.ProfileImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:image="@drawable/g"
            app:mode="portrait"
            app:border="true"
            app:shadow="true"
            app:borderRadius="4dp"
            app:borderColor="#FFFFFF"
            app:shadowColor="#AA000000"
            app:imageScaleMode="fit"
            app:frame="square" />

        <org.material.profileimv.ProfileImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image="@drawable/g"
            app:mode="portrait"
            app:border="true"
            app:shadow="true"
            app:borderRadius="4dp"
            app:borderColor="#FFFFFF"
            app:shadowColor="#AA000000"
            app:imageScaleMode="fit"
            app:frame="circle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <org.material.profileimv.ProfileImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image="@drawable/g"
            app:mode="portrait"
            app:border="true"
            app:shadow="true"
            app:borderRadius="4dp"
            app:borderColor="#FFFFFF"
            app:shadowColor="#AA000000"
            app:imageScaleMode="fit"
            app:frame="pentagon" />

        <org.material.profileimv.ProfileImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:image="@drawable/g"
            app:mode="portrait"
            app:border="true"
            app:shadow="true"
            app:borderRadius="4dp"
            app:borderColor="#FFFFFF"
            app:shadowColor="#AA000000"
            app:imageScaleMode="fit"
            app:frame="hexagon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <org.material.profileimv.ProfileImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:image="@drawable/g"
            app:mode="portrait"
            app:border="true"
            app:shadow="true"
            app:borderRadius="4dp"
            app:borderColor="#FFFFFF"
            app:shadowColor="#AA000000"
            app:imageScaleMode="fit"
            app:frame="heptagon" />

        <org.material.profileimv.ProfileImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:image="@drawable/g"
            app:mode="portrait"
            app:border="true"
            app:shadow="true"
            app:borderRadius="4dp"
            app:borderColor="#FFFFFF"
            app:shadowColor="#AA000000"
            app:imageScaleMode="fit"
            app:frame="octagon" />

    </LinearLayout>
</LinearLayout>
